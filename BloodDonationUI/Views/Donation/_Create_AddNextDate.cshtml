@model BloodDonationUI.Models.DonationCreateViewModel

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h3 class="modal-title">Következő időpont megadása</h3>
</div>

<div class="row">
    <div class="col-md-10 col-md-offset-1">
        Mivel a véradás sikertelen volt, a következő próbálkozás időpontját kézzel kell megadni az orvosi vizsgálaton kapott információk alapján.
    </div>
</div>

@using (Html.BeginForm("Create", "Donation", FormMethod.Post))
{
    <div class="modal-body">
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.DonationDate)
            @Html.HiddenFor(model => model.DonationCenterId)
            @Html.HiddenFor(model => model.IsSuccessful)
            @Html.HiddenFor(model => model.Comments)
            <div class="form-group">
                @Html.LabelFor(model => model.NextDate, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NextDate, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NextDate, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button class="btn btn-default" data-dismiss="modal">Vissza</button>
        <input class="btn btn-success" type="submit" value="Mentés" />
    </div>
}
